<% content_for :meta_title, t(".meta_title") %>
<% content_for :sidebar do %>
  <h1><%= t(".sidebar.title") %></h1>
  <p><%= t(".sidebar.description") %></p>
  <p><%= link_to t(".add"), new_vacancy_url, :class => "large btn primary" %></p>

  <div class="rss">
    <p><%= link_to image_tag("feed_rss_icon.png", :size => "48x48", :alt => t(".rss")), vacancies_path(:xml) %></p>
    <p><%= link_to t(".rss"), vacancies_path(:xml), :class => "h3", %></p>
  </div>
<% end %>

<% @vacancies.in_groups_of(2, false) do |group| %>
<div class="row">
  <% for vacancy in group %>
  <article class="span6">
    <h1><%= link_to vacancy.title, vacancy %></h1>
    <h4 class="muted"><%= company_location_tag(vacancy) %></h4>
    <%= vacancy.excerpt_html.html_safe %>
  </article>
  <% end %>
</div>
<% end %>

<%= paginate @vacancies %>
